# Copy this file to docker-compose.override.yml and customize for your local setup.
# docker-compose.override.yml is gitignored.
#
# Use this to mount local data directories that may be symlinked in the project.
# This avoids symlink issues by mounting the actual data paths directly.

services:
  devcontainer:
    volumes:
      # Example: Mount your local data directory
      # - "/path/to/your/data:/workspace/data:cached"
      #
      # Example: Mount multiple data sources
      # - "/media/user/Data/mri_data:/workspace/data/raw:cached"
      # - "/media/user/Data/reference:/workspace/data/reference:cached"
      []
